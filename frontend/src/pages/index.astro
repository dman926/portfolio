    class="full-size bg-gradient-to-br from-base00 via-base02 to-base0E animate-gradient-fancy fade-bottom"
    slot="before-content"
  >
    {
      /* TODO: The gradient is cool, but it would be cooler to have the gradient move around the cursor position and maybe react to clicks */
    }
    <div class="h-full flex flex-col justify-center items-center">
      <p>This is before the content</p>
