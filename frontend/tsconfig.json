{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "types": ["vitest", "vitest/globals", "node"],
    "paths": {
      "~assets/*": ["./src/assets/*"],
      "~components/*": ["./src/components/*"],
      "~angular/*": ["./src/components/demo-features/angular/*"],
      "~react/*": ["./src/components/demo-features/react/*"],
      "~svelte/*": ["./src/components/demo-features/svelte/*"],
      "~vue/*": ["./src/components/demo-features/vue/*"]
    }
  }
}
